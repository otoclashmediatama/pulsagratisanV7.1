<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="8dp"
		android:background="#607D8B"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/actionbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:background="#B0BEC5"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/imageview1"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:src="@drawable/logobaru_pulsagratisan"
				android:scaleType="fitXY"/>
			<TextView
				android:id="@+id/nopeakun"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:padding="8dp"
				android:text="0812***"
				android:textSize="18sp"
				android:textStyle="bold"
				android:textColor="#E0E0E0"
				android:layout_weight="1"/>
			<TextView
				android:id="@+id/poinkamu"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="0"
				android:textSize="12sp"
				android:textColor="#FFEB3B"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:background="#607D8B"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/textview2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="5dp"
				android:paddingTop="8dp"
				android:paddingBottom="8dp"
				android:background="#607D8B"
				android:text="("
				android:textSize="25sp"
				android:textColor="#FFFFFF"/>
			<EditText
				android:id="@+id/edittext1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#607D8B"
				android:textSize="25sp"
				android:textStyle="bold"
				android:textColor="#FFFFFF"
				android:hint="08**"
				android:textColorHint="#64B5F6"
				android:singleLine="true"
				android:inputType="phone"
				android:imeOptions="actionNext"/>
			<TextView
				android:id="@+id/textview1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingTop="8dp"
				android:paddingBottom="8dp"
				android:background="#607D8B"
				android:text=")"
				android:textSize="25sp"
				android:textColor="#FFFFFF"/>
			<EditText
				android:id="@+id/edittext2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#607D8B"
				android:textSize="25sp"
				android:textStyle="bold"
				android:textColor="#FFFFFF"
				android:hint="16096***"
				android:textColorHint="#90CAF9"
				android:singleLine="true"
				android:inputType="phone"
				android:imeOptions="actionGo"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/layout_cekoperator"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:background="#607D8B"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<LinearLayout
				android:id="@+id/linear4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<Button
					android:id="@+id/tmbl_cekoperator"
					android:layout_width="150dp"
					android:layout_height="50dp"
					android:padding="8dp"
					android:background="@drawable/tombol_next"
					android:gravity="center_horizontal|bottom"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="#2196F3"/>
				<LinearLayout
					android:id="@+id/layout_loading"
					android:layout_width="match_parent"
					android:layout_height="75dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<LinearLayout
						android:id="@+id/loadingbar_layout"
						android:layout_width="75dp"
						android:layout_height="match_parent"
						android:padding="8dp"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="vertical"/>
					<TextView
						android:id="@+id/textview3"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Mencari Operator...."
						android:textSize="14sp"
						android:textStyle="bold|italic"
						android:textColor="#4FC3F7"/>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/layout_listoperator"
			android:layout_width="match_parent"
			android:layout_height="75dp"
			android:paddingLeft="8dp"
			android:paddingTop="5dp"
			android:paddingRight="8dp"
			android:paddingBottom="5dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/logo_operator"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:src="@drawable/default_image"
				android:scaleType="fitXY"/>
			<TextView
				android:id="@+id/operator"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:padding="8dp"
				android:textSize="30sp"
				android:textStyle="bold"
				android:textColor="#FFFFFF"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/lay_nominalpulsa"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/textview5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="Rp."
				android:textSize="25sp"
				android:textColor="#FFFFFF"/>
			<TextView
				android:id="@+id/nominalpulsa"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="TextView"
				android:textSize="25sp"
				android:textColor="#FFFFFF"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear6"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="8dp"
			android:gravity="center_horizontal|bottom"
			android:orientation="vertical"
			android:layout_weight="1">
			<LinearLayout
				android:id="@+id/linear8"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal"
				android:layout_weight="1">
				<TextView
					android:id="@+id/feedback_penukaran"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:textSize="12sp"
					android:textColor="#90CAF9"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear7"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/emailhiden"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="TextView"
					android:textSize="12sp"
					android:textColor="#90CAF9"/>
			</LinearLayout>
			<Button
				android:id="@+id/tombol_ajukanpulsa"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="KIRIM PENGAJUAN"
				android:textSize="20sp"
				android:textColor="#03A9F4"/>
			<TextView
				android:id="@+id/passhiden"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:padding="8dp"
				android:text="TextView"
				android:textSize="12sp"
				android:textColor="#000000"
				android:alpha="0.0"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
