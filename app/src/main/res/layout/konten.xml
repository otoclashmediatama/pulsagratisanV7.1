<android.support.v4.widget.DrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/_drawer"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:openDrawer="start">
	<android.support.design.widget.CoordinatorLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<android.support.design.widget.AppBarLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:theme="@style/AppTheme.AppBarOverlay">
			<android.support.v7.widget.Toolbar
				android:id="@+id/_toolbar"
				android:layout_width="match_parent"
				android:layout_height="?attr/actionBarSize"
				android:background="?attr/colorPrimary"
				app:popupTheme="@style/AppTheme.PopupOverlay"/>
		</android.support.design.widget.AppBarLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			app:layout_behavior="@string/appbar_scrolling_view_behavior">
			<LinearLayout
				android:id="@+id/lay1"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/lay_sidemenu_konten"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:orientation="horizontal"
					android:layout_weight="1">
					<LinearLayout
						android:id="@+id/lay_isi_konten"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:background="#FFFFFF"
						android:orientation="vertical">
						<LinearLayout
							android:id="@+id/lay_head_menu"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:background="#607D8B"
							android:orientation="horizontal">
							<Button
								android:id="@+id/tombol_layberanda"
								android:layout_width="0dp"
								android:layout_height="50dp"
								android:padding="8dp"
								android:background="#EC407A"
								android:text="Beranda"
								android:textSize="14sp"
								android:textStyle="bold"
								android:textColor="#FFFFFF"
								android:layout_weight="1"/>
							<Button
								android:id="@+id/tombol_laybooster"
								android:layout_width="0dp"
								android:layout_height="50dp"
								android:padding="8dp"
								android:background="#EC407A"
								android:text="Booster"
								android:textSize="14sp"
								android:textStyle="bold"
								android:textColor="#FFFFFF"
								android:layout_weight="1"/>
							<Button
								android:id="@+id/tombol_laypesanadmin"
								android:layout_width="0dp"
								android:layout_height="50dp"
								android:padding="8dp"
								android:background="#EC407A"
								android:text="Info"
								android:textSize="14sp"
								android:textStyle="bold"
								android:textColor="#FFFFFF"
								android:layout_weight="1"/>
							<Button
								android:id="@+id/tombol_kegame"
								android:layout_width="0dp"
								android:layout_height="50dp"
								android:padding="8dp"
								android:background="#EC407A"
								android:text="Game"
								android:textSize="14sp"
								android:textStyle="bold"
								android:textColor="#FFFFFF"
								android:layout_weight="1"/>
						</LinearLayout>
						<LinearLayout
							android:id="@+id/layout_pebagi_konten"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:orientation="horizontal">
							<LinearLayout
								android:id="@+id/layout_beranda"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:orientation="vertical">
								<LinearLayout
									android:id="@+id/lay_header"
									android:layout_width="match_parent"
									android:layout_height="200dp"
									android:background="@drawable/bg_head"
									android:gravity="center_horizontal|center_vertical"
									android:orientation="vertical">
									<LinearLayout
										android:id="@+id/linear42"
										android:layout_width="match_parent"
										android:layout_height="wrap_content"
										android:padding="8dp"
										android:gravity="left|center_vertical"
										android:orientation="horizontal">
										<ImageView
											android:id="@+id/imageview16"
											android:layout_width="40dp"
											android:layout_height="40dp"
											android:src="@drawable/ic_timer_sand"
											android:scaleType="fitXY"/>
										<TextView
											android:id="@+id/textview20"
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:padding="8dp"
											android:text="Durasi On :"
											android:textSize="14sp"
											android:textStyle="bold"
											android:textColor="#E91E63"/>
										<TextView
											android:id="@+id/hitungwaktuon"
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:padding="8dp"
											android:text="0:0:0"
											android:textSize="12sp"
											android:textColor="#E91E63"
											android:singleLine="true"/>
									</LinearLayout>
									<LinearLayout
										android:id="@+id/linear8"
										android:layout_width="match_parent"
										android:layout_height="wrap_content"
										android:padding="3dp"
										android:gravity="right|center_vertical"
										android:orientation="horizontal">
										<TextView
											android:id="@+id/nope_akun"
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:padding="8dp"
											android:text="081216096***"
											android:textSize="25sp"
											android:textStyle="bold"
											android:textColor="#E91E63"/>
									</LinearLayout>
									<LinearLayout
										android:id="@+id/linear9"
										android:layout_width="match_parent"
										android:layout_height="wrap_content"
										android:padding="3dp"
										android:gravity="right|center_vertical"
										android:orientation="horizontal">
										<TextView
											android:id="@+id/textview2"
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:padding="8dp"
											android:text="Poin : "
											android:textSize="14sp"
											android:textStyle="bold"
											android:textColor="#E91E63"/>
										<TextView
											android:id="@+id/poin_akun"
											android:layout_width="wrap_content"
											android:layout_height="75dp"
											android:padding="8dp"
											android:background="@drawable/bg_poin"
											android:gravity="center_horizontal|center_vertical"
											android:text="0"
											android:textSize="25sp"
											android:textStyle="bold"
											android:textColor="#FFFFFF"
											android:layout_weight="1"/>
									</LinearLayout>
								</LinearLayout>
								<ScrollView
									android:id="@+id/vscrollberanda"
									android:layout_width="match_parent"
									android:layout_height="match_parent">
									<LinearLayout
										android:id="@+id/horisontal_beranda"
										android:layout_width="match_parent"
										android:layout_height="999dp"
										android:padding="8dp"
										android:orientation="vertical">
										<LinearLayout
											android:id="@+id/linear46"
											android:layout_width="match_parent"
											android:layout_height="100dp"
											android:padding="8dp"
											android:orientation="horizontal"/>
										<LinearLayout
											android:id="@+id/linear33"
											android:layout_width="match_parent"
											android:layout_height="175dp"
											android:layout_marginBottom="10dp"
											android:background="@drawable/bgcekin"
											android:gravity="center_horizontal|center_vertical"
											android:orientation="horizontal">
											<TextView
												android:id="@+id/tanggal"
												android:layout_width="0dp"
												android:layout_height="0dp"
												android:padding="8dp"
												android:text="TextView"
												android:textSize="12sp"
												android:textColor="#000000"
												android:alpha="0.0"/>
											<LinearLayout
												android:id="@+id/linear48"
												android:layout_width="wrap_content"
												android:layout_height="match_parent"
												android:padding="8dp"
												android:gravity="center_vertical"
												android:orientation="vertical">
												<TextView
													android:id="@+id/teks_absenharian"
													android:layout_width="200dp"
													android:layout_height="50dp"
													android:layout_marginTop="25dp"
													android:padding="8dp"
													android:background="#EC407A"
													android:gravity="center_horizontal|center_vertical"
													android:text="CHECK IN"
													android:textSize="20sp"
													android:textStyle="bold"
													android:textColor="#FFFFFF"/>
												<ImageView
													android:id="@+id/gambar_absenharian"
													android:layout_width="100dp"
													android:layout_height="100dp"
													android:src="@drawable/klikcekin"
													android:scaleType="fitXY"
													android:translationY="-35.0dp"/>
											</LinearLayout>
										</LinearLayout>
										<LinearLayout
											android:id="@+id/linear45"
											android:layout_width="match_parent"
											android:layout_height="wrap_content"
											android:layout_marginTop="10dp"
											android:padding="8dp"
											android:gravity="center_horizontal|center_vertical"
											android:orientation="horizontal">
											<ImageView
												android:id="@+id/imageview18"
												android:layout_width="200dp"
												android:layout_height="200dp"
												android:src="@drawable/ig_pulsagratisan"
												android:scaleType="fitXY"/>
											<Button
												android:id="@+id/follow_ig"
												android:layout_width="100dp"
												android:layout_height="100dp"
												android:padding="8dp"
												android:text="+1000"
												android:textSize="18sp"
												android:textStyle="bold"
												android:textColor="#E91E63"/>
										</LinearLayout>
										<LinearLayout
											android:id="@+id/linear47"
											android:layout_width="match_parent"
											android:layout_height="wrap_content"
											android:padding="8dp"
											android:gravity="center_horizontal|center_vertical"
											android:orientation="horizontal">
											<ImageView
												android:id="@+id/imageview20"
												android:layout_width="200dp"
												android:layout_height="200dp"
												android:src="@drawable/fb_pulsagratisan"
												android:scaleType="fitXY"/>
											<Button
												android:id="@+id/like_fb"
												android:layout_width="100dp"
												android:layout_height="100dp"
												android:padding="8dp"
												android:text="+1000"
												android:textSize="18sp"
												android:textStyle="bold"
												android:textColor="#E91E63"/>
										</LinearLayout>
									</LinearLayout>
								</ScrollView>
							</LinearLayout>
							<LinearLayout
								android:id="@+id/layout_boosterpoin"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:orientation="vertical">
								<LinearLayout
									android:id="@+id/layout_ads_medium"
									android:layout_width="match_parent"
									android:layout_height="250dp"
									android:background="#FFFFFF"
									android:gravity="center_horizontal|center_vertical"
									android:orientation="horizontal"/>
								<ScrollView
									android:id="@+id/vscroll1"
									android:layout_width="match_parent"
									android:layout_height="match_parent">
									<LinearLayout
										android:id="@+id/linear32"
										android:layout_width="match_parent"
										android:layout_height="999dp"
										android:paddingLeft="45dp"
										android:paddingTop="8dp"
										android:paddingRight="45dp"
										android:paddingBottom="8dp"
										android:background="#FFFFFF"
										android:orientation="vertical">
										<LinearLayout
											android:id="@+id/linear34"
											android:layout_width="match_parent"
											android:layout_height="wrap_content"
											android:layout_marginBottom="10dp"
											android:background="@drawable/bgcekin"
											android:gravity="center_vertical"
											android:orientation="horizontal">
											<ImageView
												android:id="@+id/gambar_bagikan"
												android:layout_width="75dp"
												android:layout_height="75dp"
												android:background="@drawable/bundarputih"
												android:src="@drawable/ic_share"
												android:scaleType="fitXY"/>
											<TextView
												android:id="@+id/teks_bagikan"
												android:layout_width="wrap_content"
												android:layout_height="wrap_content"
												android:padding="8dp"
												android:text="BAGIKAN"
												android:textSize="20sp"
												android:textStyle="bold"
												android:textColor="#FFFFFF"/>
										</LinearLayout>
										<LinearLayout
											android:id="@+id/linear35"
											android:layout_width="match_parent"
											android:layout_height="wrap_content"
											android:layout_marginBottom="10dp"
											android:background="@drawable/bgcekin"
											android:gravity="center_vertical"
											android:orientation="horizontal">
											<ImageView
												android:id="@+id/gambar_ratingapp"
												android:layout_width="75dp"
												android:layout_height="75dp"
												android:background="@drawable/bundarputih"
												android:src="@drawable/ic_star"
												android:scaleType="fitXY"/>
											<TextView
												android:id="@+id/teks_ratingapp"
												android:layout_width="wrap_content"
												android:layout_height="wrap_content"
												android:padding="8dp"
												android:text="NILAI"
												android:textSize="20sp"
												android:textStyle="bold"
												android:textColor="#FFFFFF"/>
											<TextView
												android:id="@+id/nilai_app"
												android:layout_width="0dp"
												android:layout_height="0dp"
												android:padding="8dp"
												android:textSize="12sp"
												android:textColor="#000000"
												android:alpha="0.0"/>
										</LinearLayout>
										<LinearLayout
											android:id="@+id/linear36"
											android:layout_width="match_parent"
											android:layout_height="wrap_content"
											android:background="@drawable/bgcekin"
											android:gravity="center_vertical"
											android:orientation="horizontal">
											<ImageView
												android:id="@+id/gambar_boosterpoin"
												android:layout_width="75dp"
												android:layout_height="75dp"
												android:background="@drawable/bundarputih"
												android:src="@drawable/ic_rocket"
												android:scaleType="fitXY"/>
											<TextView
												android:id="@+id/teks_boosterpoin"
												android:layout_width="wrap_content"
												android:layout_height="wrap_content"
												android:padding="8dp"
												android:text="BOOSTER"
												android:textSize="20sp"
												android:textStyle="bold"
												android:textColor="#FFFFFF"/>
										</LinearLayout>
									</LinearLayout>
								</ScrollView>
							</LinearLayout>
							<LinearLayout
								android:id="@+id/lay_pesan_admin"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:padding="8dp"
								android:background="#FFFFFF"
								android:orientation="vertical">
								<LinearLayout
									android:id="@+id/linear37"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:padding="8dp"
									android:background="#263238"
									android:orientation="horizontal">
									<ImageView
										android:id="@+id/imageview15"
										android:layout_width="40dp"
										android:layout_height="40dp"
										android:src="@drawable/notif"
										android:scaleType="fitXY"/>
									<TextView
										android:id="@+id/textview17"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:padding="8dp"
										android:text="INFO DARI ADMIN :"
										android:textSize="14sp"
										android:textStyle="bold"
										android:textColor="#FFFFFF"/>
								</LinearLayout>
								<ScrollView
									android:id="@+id/vscroll2"
									android:layout_width="match_parent"
									android:layout_height="match_parent"
									android:padding="8dp"
									android:background="#607D8B">
									<LinearLayout
										android:id="@+id/linear38"
										android:layout_width="match_parent"
										android:layout_height="999dp"
										android:padding="8dp"
										android:background="#607D8B"
										android:orientation="vertical">
										<TextView
											android:id="@+id/pesan_admin"
											android:layout_width="match_parent"
											android:layout_height="match_parent"
											android:padding="8dp"
											android:text="Pesan"
											android:textSize="12sp"
											android:textColor="#FFEE58"/>
									</LinearLayout>
								</ScrollView>
							</LinearLayout>
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/lay_footer"
					android:layout_width="match_parent"
					android:layout_height="35dp"
					android:background="#000000"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical">
					<TextView
						android:id="@+id/textview19"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="PULSA GRATISAN © OTOCLASH 2018"
						android:textSize="12sp"
						android:textStyle="bold|italic"
						android:textColor="#FFFFFF"/>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
		<android.support.design.widget.FloatingActionButton
			android:id="@+id/_fab"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:layout_gravity="right|bottom"
			app:srcCompat="@drawable/ic_wallet_giftcard"/>
	</android.support.design.widget.CoordinatorLayout>
	<LinearLayout
		android:id="@+id/_nav_view"
		android:layout_width="320dp"
		android:layout_height="match_parent"
		android:layout_gravity="start"
		android:background="#EEEEEE">
		<include	layout="@layout/_drawer_konten"/>
	</LinearLayout>
</android.support.v4.widget.DrawerLayout>
